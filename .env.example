# Telegram Bot Token
BOT_TOKEN=your_bot_token_here

# X-UI Panel Configuration
XUI_HOST=https://your-xui-panel.com
XUI_USERNAME=admin
XUI_PASSWORD=admin

# Admin ID (получите свой ID через @userinfobot в Telegram)
ADMIN_ID=123456789

# Inbound ID для создания ключей (по умолчанию 12)
INBOUND_ID=12

# Домен для ключей
DOMAIN=raphaeilvpn.ru

# WebApp (Mini App) Configuration
WEBAPP_HOST=0.0.0.0
WEBAPP_PORT=8080
WEBAPP_URL=https://raphaelvpn.ru:8080

# Remote Servers Passwords (переопределяют пароли из servers_config.json)
# Формат: VPN_SERVER_{SERVER_NAME}_SSH_PASSWORD или VPN_SERVER_{SERVER_NAME}_PANEL_PASSWORD
# Где SERVER_NAME - имя сервера в верхнем регистре

# VpnPulse сервер (SSH)
# VPN_SERVER_VPNPULSE_SSH_PASSWORD=your_ssh_password_here

# Germany сервер (Panel API)
# VPN_SERVER_GERMANY_PANEL_PASSWORD=your_panel_password_here

# Niderland сервер (Panel API)
# VPN_SERVER_NIDERLAND_PANEL_PASSWORD=your_panel_password_here

# ==================== LOKI LOGGING ====================
# Включить отправку логов в Grafana Loki
LOKI_ENABLED=false

# URL Loki API (без /loki/api/v1/push - добавляется автоматически)
LOKI_URL=http://localhost:3100

# Дополнительные labels для логов (формат: key=value,key2=value2)
LOKI_LABELS=env=production,region=ru

# ==================== REST API ====================
# API ключ для внешних интеграций
API_KEY=change-me-in-production

# REST API порт
REST_API_PORT=8081

# Включить REST API
REST_API_ENABLED=false
